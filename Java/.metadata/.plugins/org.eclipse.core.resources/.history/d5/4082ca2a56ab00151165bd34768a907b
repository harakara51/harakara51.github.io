
public class Cards
{
private int number;
private String suit;


public Cards()
{
	setNumber();
	setSuit();
}

public Cards(int number, String suit)
{
	super();
	this.number = number;
	this.suit = suit;
}


/**
 * @return the number
 */
public int getNumber()
{
	return number;
}
/**
 * @return the suit
 */
public String getSuit()
{
	return suit;
}
/**
 * @param number the number to set
 */
public void setNumber()
{
	this.number = (int)((Math.random() * 12) + 1);
}
/**
 * @param suit the suit to set
 */
public void setSuit()
{
	String [] suit = {"Hearts", "Diamind", "Spade", "Club"};
	this.suit = suit[(int)((Math.random() * 4)+1)];
}

/* (non-Javadoc)
 * @see java.lang.Object#toString()
 */
@Override
public String toString()
{
	return "Cards [number=" + number + ", suit=" + suit + "]";
}








}
