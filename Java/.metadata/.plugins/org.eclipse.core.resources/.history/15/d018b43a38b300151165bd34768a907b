package Bingo;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class BingoSeed
{

	private int Value;
	private List<Integer> ValuesB = new ArrayList<>();
	private List<Integer> ValuesI= new ArrayList<>();
	private List<Integer> ValuesN = new ArrayList<>();
	private List<Integer> ValuesG = new ArrayList<>();
	private List<Integer> ValuesO = new ArrayList<>();
	private char alphabet;
	private char [] alpha = {'B', 'I', 'N', 'G', 'O'};
	private int wins;
	/**
	 * @return the name
	 */
	public BingoSeed()
	{

		setValues();
		setAlphabet();
	}
	
	public void setValue()
	{
	
	

	}
	
	public String getResult ()

	
	{
		Collections.shuffle(Values);
		return(Values.size() + " "+ Values.get(0));
	}




	/**
	 * @param wins the wins to set
	 */
	public void setWins(int wins)
	{
		this.wins += wins;
	}

	public void setWins2(int wins)
	{
		this.wins = 1;
	}

	/**
	 * @return the values
	 */
	public List<Integer> getValues()
	{
		return Values;
	}

	/**
	 * @return the alphabet
	 */
	public char getAlphabet()
	{
		
		
		return alphabet;
	}
	public int getValue(int number)
	{
		
	int finalValue =0;
		if (number ==0)
		{
		Collections.shuffle(ValuesB);
		Value = ValuesB.get(0);
		ValuesB.remove(0);
		}
		else if (number ==1)
		{
		Collections.shuffle(ValuesI);
		Value = ValuesI.get(0);
		ValuesI.remove(0);
		}
		else if (number ==2)
		{
		Collections.shuffle(ValuesN);
		Value = ValuesN.get(0);
		ValuesN.remove(0);
		}
		else if (number ==3)
		{
		Collections.shuffle(ValuesG);
		Value = ValuesG.get(0);
		ValuesG.remove(0);
		}
		
		
		return Value;
	}
	


	/**
	 * @return the alpha
	 */
	public char[] getAlpha()
	{
		return alpha;
	}

	/**
	 * @param values the values to set
	 */
	public void setValuesB()
	{
		for (int i  = 0; i <15; i ++)
		{
			ValuesB.add(i);
		}
	}
	public void setValuesI()
	{
		for (int i  = 15; i <30; i ++)
		{
			ValuesI.add(i);
		}
	}
	public void setValuesN()
	{
		for (int i  = 30; i <45; i ++)
		{
			ValuesN.add(i);
		}
	}



	public void setAlphabet ()
	{
		int random = (int)(Math.random()*5);
		alphabet = alpha[random];
	}
	
	

}
