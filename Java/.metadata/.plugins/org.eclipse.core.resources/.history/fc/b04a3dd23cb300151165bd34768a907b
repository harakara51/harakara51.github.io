package Bingo;

import java.util.Scanner;

public class BingoTester
{
	public static BingoSeed test = new BingoSeed();
	public static String [][] board = new String [5][5];
	public static String answer;
	private static int gameStatus;
	private static int userInput;
	public static int random;
	public static void main(String[] args)
	{
		gameboard();
		while(gameStatus !=5)
		{
		Scanner keyboard = new Scanner(System.in);
		
			if (userInput ==0)
				{
				
				System.out.println("Press 1 to print out the next Bingo Value?");
				userInput =  keyboard.nextInt();
				
				}
			else if (userInput ==1)
			{
				newBingoValues();
				match();
				userInput =0;
			}
		
		
		}
	}
	
	public static void newBingoValues ()
	{
		int testrandom = (int)(Math.random()*5);
		answer = test.getAlphabet() + String.valueOf(test.getValue(testrandom));
		System.out.println(answer);
	}
	
	public static void gameboard ()
	{
		
		System.out.println( " B\t I\t N \t G\t O");
		String number = "";
		int multiplier=15;
		for (int i =0; i < (board.length); i++)
		{
		random = (int)(Math.random() *((i+1)*multiplier)); 
			for (int j =0; j < (board.length); j++)
			{
				test.setAlphabet();
				
				board[i][j] = test.getAlphabet() + String.valueOf(test.getValue(i));
				System.out.print(test.getValue(i) + " \t");
				//answer = test.getAlphabet() + String.valueOf(test.getValue(i));
			}
			System.out.println();
		}
		
	}
	public static void match()
	{
		for (String[] strings : board)
		{
			if (strings.equals(answer))
			{
				System.out.println("Bingo!!");
			}
		}
	}
}
